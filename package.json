{
  "name": "ai-command-center",
  "version": "2.0.0",
  "description": "Unified AI dashboard - Memory Viewer, Vision, Chain Runner",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "author": "Myers",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "chokidar": "^3.5.3",
    "diff": "^5.1.0",
    "dotenv": "^16.3.1",
    "lucide-react": "^0.562.0",
    "openai": "^4.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "png-to-ico": "^3.0.1",
    "vite": "^6.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.myers.ai-command-center",
    "productName": "AI Command Center",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "dir",
      "icon": "src/assets/icon.ico",
      "sign": false,
      "signAndEditExecutable": false
    },
    "extraMetadata": {
      "main": "electron/main.cjs"
    }
  }
}
